{
  "manifest_version": 3,
  "name": "CleanRead",
  "version": "1.0.0",
  "description": "Make webpages more readable for people with dyslexia.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": { 
    "default_popup": "popup.html", 
    "default_title": "CleanRead" 
  },
  "background": { 
    "service_worker": "background.js", 
    "type": "module" 
  },
  "commands": {
    "toggle_mode": { 
      "suggested_key": { 
        "default": "Alt+Shift+D",
        "mac": "Command+Shift+D"
      }, 
      "description": "Toggle Dyslexia Mode" 
    }
  },
  "icons": { 
    "16": "icons/icon_16.png", 
    "48": "icons/icon_48.png", 
    "128": "icons/icon_128.png" 
  },
  "web_accessible_resources": [{
    "resources": [
      "fonts/*", 
      "content/fonts/*.css",
      "content/fonts/*.woff2",
      "content/fonts/*.ttf",
      "content/fonts/opendyslexic/*.woff2",
      "content/fonts/lexend/*.woff2",
      "content/fonts/lexend/*.ttf",
      "content/styles/*.css",
      "content.js",
      "content/*.js",
      "shared/*.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [{
    "type": "module",
    "matches": ["<all_urls>"],
    "js": ["content_loader.js"],
    "run_at": "document_end"
  }]
}
